<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.side.Profile">

    <ScrollView
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_parent"
        android:fillViewport="true"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_90dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_70dp"
                        android:background="@drawable/edit_txt_backgroung"
                        android:hint="Username"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_txt_backgroung"
                        android:hint="Email"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textColorHint="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_txt_backgroung"
                        android:hint="Mobile"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:inputType="number"
                        android:maxLength="13"
                        android:textColorHint="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_txt_backgroung"
                        android:hint="Address"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/buttonUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Submit"
                        android:layout_marginBottom="@dimen/_50dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_photo_parent"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50dp"
                    android:layout_centerHorizontal="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/viewProfile"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_100dp"
                        android:src="@drawable/user"
                        app:civ_border_width="5dp"
                        app:civ_border_color="#ffffff"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/editProfile"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    android:layout_marginBottom="-10dp"
                    android:layout_alignRight="@+id/rl_photo_parent"
                    android:layout_alignBottom="@+id/rl_photo_parent" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</layout>